<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
      <%= link_to "New post", new_post_path, class: "btn btn-primary mb-3" %>
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "btn btn-warning" %>
    </p>
  <% end %>
</div>

