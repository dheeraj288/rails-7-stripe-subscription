<div class="new-post-container mt-5">
  <h1 class="page-title">New Post</h1>

  <div class="post-form-container">
    <%= render "form", post: @post %>
  </div>

  <div class="navigation-links">
    <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
  </div>
</div>

