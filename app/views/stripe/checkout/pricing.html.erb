<div class="prices-container">
  <% @prices.each do |price| %>
    <div class="price-card">
      <div class="price-info">
        <p class="product-name"><%= price.product.name %></p>
        <p class="price-details">
          <span class="currency"><%= price.currency %></span>
          <span class="amount"><%= price.unit_amount / 100 %></span>
        </p>
        <p class="interval-type">
          <span class="interval"><%= price.recurring.interval.capitalize %></span>
          <span class="type"><%= price.type.capitalize %></span>
        </p>
      </div>
      <div class="subscribe-button">
        <%= button_to 'Subscribe', stripe_checkout_path(price_id: price.id), data: { turbo: 'false' }, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>


